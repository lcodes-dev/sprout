{
	"name": "sprout",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "docker compose up -d && concurrently -n CSS,JS,SERVER -c cyan,magenta,green \"npm run watch:css\" \"npm run watch:js\" \"tsx watch src/main.ts\"",
		"start": "node dist/main.js",
		"build": "npm run build:css && npm run build:js && npm run build:server",
		"build:server": "tsc -p tsconfig.json",
		"build:css": "tailwindcss -i assets/css/main.css -o static/css/main.css --minify",
		"build:js": "esbuild assets/js/main.ts --bundle --outfile=static/js/main.js --format=esm --platform=browser --target=es2020 --minify",
		"watch:css": "tailwindcss -i assets/css/main.css -o static/css/main.css --watch",
		"watch:js": "esbuild assets/js/main.ts --bundle --outfile=static/js/main.js --format=esm --platform=browser --target=es2020 --sourcemap=inline --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check --write .",
		"lint:check": "biome check",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@aws-sdk/client-ses": "^3.933.0",
		"@hono/node-server": "^1.19.6",
		"@hotwired/turbo": "^8.0.0",
		"alpinejs": "^3.14.0",
		"apexcharts": "^5.3.6",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.36.4",
		"hono": "^4.10.6",
		"nodemailer": "^7.0.10",
		"pg": "^8.16.3",
		"postgres": "^3.4.5",
		"resend": "^6.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@tailwindcss/cli": "^4.0.0",
		"@types/node": "^20.11.17",
		"@types/nodemailer": "^7.0.4",
		"@types/pg": "^8.15.6",
		"concurrently": "^9.1.0",
		"drizzle-kit": "^0.29.1",
		"esbuild": "^0.19.0",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3",
		"vitest": "^2.1.4"
	}
}
