{
  "imports": {
    "hono": "jsr:@hono/hono@^4.10.6",
    "@tailwindcss/cli": "npm:@tailwindcss/cli@^4.0.0",
    "tailwindcss": "npm:tailwindcss@^4.0.0",
    "esbuild": "npm:esbuild@^0.19.0",
    "@hotwired/stimulus": "npm:@hotwired/stimulus@^3.2.0",
    "@hotwired/turbo": "npm:@hotwired/turbo@^8.0.0",
    "@std/path": "jsr:@std/path@^0.223.0",
    "@std/fs": "jsr:@std/fs@^0.223.0",
    "concurrently": "npm:concurrently@^9.1.0"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read src/main.ts",
    "dev": "deno run -A npm:concurrently -n CSS,JS,SERVER -c cyan,magenta,green 'deno task watch:css' 'deno task watch:js' 'deno run --allow-net --allow-read --watch src/main.ts'",
    "build": "deno run -A npm:concurrently 'deno task build:css' 'deno task build:js'",
    "build:css": "deno run --allow-read --allow-write --allow-env --allow-run scripts/build-css.ts",
    "build:js": "deno run --allow-read --allow-write --allow-env --allow-run scripts/build-js.ts",
    "watch:css": "deno run --allow-read --allow-write --allow-env --allow-run scripts/build-css.ts --watch",
    "watch:js": "deno run --allow-read --allow-write --allow-env --allow-run scripts/build-js.ts --watch"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}